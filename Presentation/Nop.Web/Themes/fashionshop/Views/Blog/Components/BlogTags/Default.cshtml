@model BlogPostTagListModel
@if (Model.Tags.Count > 0)
{
    <div class="block block-popular-blogtags side-nav">
        <div class="panel-heading title">
            <h3>@T("Blog.TagCloud") <span class="fas fa-angle-down"></span></h3>
        </div>
        <div class="side-nav-gbtbox showHide-ft">
            <ul>
                @foreach (var item in Model.Tags)
                {
                    <li>
                        <a href="@Url.RouteUrl("BlogByTag", new { tag = item.Name })"> @item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}